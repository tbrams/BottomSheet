<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet"
    >


    <EditText
        android:id="@+id/textView3"
        android:layout_width="384dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_purple"
        android:padding="16dp"
        android:text="Way Point Info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textIsSelectable="false"
        />

    <Button
        android:id="@+id/btnUPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/TIPnote"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/btnDET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintTop_toTopOf="@+id/btnUPD"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/textGuide"
        android:layout_width="333dp"
        android:layout_height="160dp"
        android:height="100dp"
        android:text="@string/guide"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUPD"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/TIPnote"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/TIPname"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/etNote"
            android:layout_width="324dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Notes"

            tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="49dp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TIPname"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <EditText
            android:id="@+id/etName"
            android:layout_width="324dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Waypoint name"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>